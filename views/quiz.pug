doctype html
html(lang="en")
  head
    meta(charset="UTF-8")
    link(rel="stylesheet",
    href="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/css/bootstrap.min.css",
    integrity="sha384-Gn5384xqQ1aoWXA+058RXPxPg6fy4IWvTNh0E263XmFcJlSAwiGgFAW/dAiS6JXm",
    crossorigin="anonymous")

    title vocabulary-quiz
  body.container
    div.my-3
      a(href="/logout").btn.btn-info.float-right logout
      a(href="/home").btn.btn-info.float-right home
      h1 vocabulary-quiz
      hr
      // a(href="/logout") logout
      h2 question-#{counter}
      h3 #{q}
      h3 hint: #{hint}
    form(method="post" action="/quiz")
      div.form-group
        textarea(name="answer" cols=40 rows=2).form-control
      div.form-group
        button(type="submit").btn.btn-primary judge
    hr
    h2 result
    hr
    // each content in contents
    //   p #{content}
    //   hr
    each post in posts
      p question-#{post.count}
      p #{q}
      p judge: #{post.judge}
      p your_answer: #{user_answer}
      p correct_answer: #{a}
      p Date: #{post.createdAt}
      hr

    script(src="https://code.jquery.com/jquery-3.2.1.slim.min.js")
    script(src="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/js/bootstrap.min.js",
    integrity="sha384-JZR6Spejh4U02d8jOt6vLEHfe/JQGiRRSQQxSfFWpi1MquVdAyjUar5+76PVCmYl",
    crossorigin="anonymous")
